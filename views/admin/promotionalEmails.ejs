
<%- include('./partials/header') %>
<%- include('./partials/sidenav') %>
<body oncontextmenu="return false;">

    <header id="header" class="default">
        <div class="container">
          <%- include('../partials/flashMessage') %>
        </div>
      </header>

      <main class="body-content">
    <div class="ms-content-wrapper">
        <div class="row">
            <div class="col-md-12">
                <div class="ms-panel">
                  <div class="ms-panel-header">
                    <h6>Send Promotional Email </h6>
                  </div>
                  <div class="ms-panel-body">
                    <form method="POST"  action="/admin/promotionalEmails" enctype="multipart/form-data">
                      <div class="form-group">
                        <label for="exampleEmail">Subject</label>
                        <input type="text" name="subject"  class="form-control" id="exampleEmail" placeholder="Subject of Email">
                      </div>
                      <div class="form-group">
                        <label for="exampleTextarea">Body</label>
                        <textarea class="form-control" name="text" id="exampleTextarea" rows="5"> Body of Email </textarea>
                      </div>
                      <input type="submit" class="btn btn-success d-block w-100" name="btn100" value="Send">
                    </form>
                  </div>
                </div>
              </div>
        </div>
    </div>
</main>

<%- include('./partials/footer') %>