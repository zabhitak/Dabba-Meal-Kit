
<%- include('./partials/header') %>
<%- include('./partials/sidenav') %>
<body oncontextmenu="return false;">

    <header id="header" class="default">
        <div class="container">
          <%- include('../partials/flashMessage') %>
        </div>
      </header>

      <main class="body-content">
    <div class="ms-content-wrapper">

      <div class="ms-profile-overview">
        <div class="ms-profile-cover">
          <img class="ms-profile-img" src="<%=user.avatar%>" alt="people">
          <div class="ms-profile-user-info">
            <h4 class="ms-profile-username text-white"> <%= user.username %> </h4>
            <h2 class="ms-profile-role"> <%= user.fullName %> </h2>
          </div>
        </div>
      </div>

      <div class="row">

        <div class="col-xl-7 col-md-12">
          <div class="ms-panel ms-panel-fh">
            <div class="ms-panel-body">
              <h2 class="section-title">About Me</h2>
              <p>
                <%= user.description %>
              </p>
            </div>

          </div>
        </div>
        <div class="col-xl-5 col-md-12">
          <div class="ms-panel ms-panel-fh">
            <div class="ms-panel-body">
             
              <h2 class="section-title">Basic Information</h2>
              <table class="table ms-profile-information">
                <tbody>
                  <tr>
                    <% var name = user.username %>
                    <% if(user.fullName){ %> 
                      <% name = user.fullName %>  
                    <%} %>
                    <th scope="row">Full Name</th>
                    <td> <%= name %> </td>
                  </tr>
                  <tr>
                    <th scope="row">Email Address</th>
                    <td><%= user.email %> </td>
                  </tr>
                  <tr>
                    <th scope="row">Website</th>
                    <td> <a href="<%= user.website %>" target="_blank">  <%= user.website %> </a> </td>
                  </tr>
                  <tr>
                    <th scope="row">Phone Number</th>
                    <td><%= user.phoneNumber %></td>
                  </tr>
                  <tr>
                    <th scope="row">Location</th>
                    <td> <%= user.address %> </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>

      </div>


    </div>

      </main>


<%- include('./partials/footer') %>