<%- include('./partials/authentication/header') %> 
  <body oncontextmenu="return false;">
    <header id="header" class="default">
      <div class="menu">
        <div class="container">
          <div class="row">
            <div class="col-md-2 col-sm-12 col-xs-12">
              <div class="menu-left text-center text-md-left">
                <div class="logo-box">
                  <a href="/"><img src="images/logo.svg" alt="" /></a>
                </div>
              </div>
            </div>
            <div class="col-md-10 col-sm-12 col-xs-12">
              <div class="menu-items">
                <div class="icons-set">
                  <ul class="list-inline">
                    <li class="partner-btn">
                        <a href="/signin" class="b-btn btn-link"
                          >Login</a
                        >
                      </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </header>

    <section class="login_register">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-6 col-md-6 col-12">
            <h1>Register Now</h1>
            <div class="login-container">
              <div class="row">
                <div class="col-lg-12 col-md-12 col-12">
                  <form action="signup" method="POST" >
                    <div class="login-form">
                      <div class="login-logo">
                        <a href="/"
                          ><img src="images/login-register/logo.svg" alt=""
                        /></a>
                      </div>
                      <div class="create-text">
                        <h4>Create Your Account</h4>
                      </div>
                      <div class="form-group">
                        <input  
                          required
                          type="text"
                          class="video-form"
                          id="fullName"
                          placeholder="Username"
                          name="username"
                        />
                      </div>
                      <div class="form-group">
                        <input
                          required
                          type="email"
                          class="video-form"
                          id="emailAddress"
                          placeholder="Email Address"
                          name="email"
                        />
                      </div>
                      <div class="form-group">
                        <input
                          required
                          type="password"
                          class="video-form"
                          id="password1"
                          placeholder="Password"
                          name="password"
                        />
                      </div>
                      <div class="form-group">
                        <input
                          required
                          type="password"
                          class="video-form"
                          id="password2"
                          placeholder="Confirm Password"
                          name="confirmPassword"
                        />
                      </div>
                      <div class="signup-checkbox text-left">
                        <input required type="checkbox" id="c1" name="cb" required />
                        <label for="c1"
                          >I agree to Natto's
                          <span>Terms of Service, Policy</span>and<span
                            >Content Policies</span
                          >.</label
                        >
                      </div>
                      <%- include('./partials/flashMessage') %>
                      <button type="submit" class="login-btn btn-link">
                        Register Now
                      </button>
                      <div class="forgot-password">
                        <p>
                          If you have an account?<a href="/signin"
                            ><span style="color: #ffa803"> - Login Now</span></a
                          >
                        </p>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

<%- include('./partials/authentication/footer') %>