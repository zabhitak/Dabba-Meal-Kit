<%- include('./partials/header') %>
  <body oncontextmenu="return false;">
    <header id="header" class="default">
           
      <%- include('./partials/topMenu') %>
      <div class="container">
        <%- include('./partials/flashMessage') %>
      </div>
    </header>

    <%- include('./partials/myAccountSection') %>
    
    <section class="all-profile-details">
      <div class="container">
        <div class="row">
          <div class="col-lg-3 col-md-4 col-12">
            <div class="left-tab-links">
              <div
                class="nav nav-pills nav-stacked nav-tabs ui vertical menu fluid"
              >
                
                <a
                  href="#about"
                  data-toggle="tab"
                  class="item user-tab cursor-pointer active"
                  >About</a
                >
    
                <a
                  href="#my-orders"
                  data-toggle="tab"
                  class="item user-tab cursor-pointer"
                  >My Order</a
                >
                <a
                  href="#order-history"
                  data-toggle="tab"
                  class="item user-tab cursor-pointer"
                  >Order History</a
                >
              </div>
            </div>
          </div>
          <div class="col-lg-9 col-md-8 col-12">
            <div class="tab-content">
            
              <div class="tab-pane active" id="about">
                <div class="profile-about">
                  <div class="tab-content-heading">
                    <h4>About</h4>
                    <a href="/settings"
                      ><i class="far fa-edit"></i>Edit Info</a
                    >
                  </div>
                  <div class="about-dtp">
                    <div class="about-bg">
                      <ul>
                        <li>
                          <div class="dp-detail">
                            <h6>Ful Name</h6>
                            <p> <%= user.fullName %> </p>
                          </div>
                        </li>
                        <li>
                          <div class="dp-detail">
                            <h6>Location</h6>
                            <p> <%= user.address %> </p>
                          </div>
                        </li>
                        <li>
                          <div class="dp-detail">
                            <h6>Mobile Number</h6>
                            <p><%= user.phoneNumber %></p>
                          </div>
                        </li>
                        <li>
                          <div class="dp-detail">
                            <h6>Email Address</h6>
                            <p>
                              <a
                                href="#"
                                class="_cf_email_"
                                data-cfemail="b4fedbdcdad0dbd1f4d3d9d5ddd89ad7dbd9"
                                > <%= user.email %>
                              </a>
                            </p>
                          </div>
                        </li>
                        <li>
                          <div class="dp-detail">
                            <h6>Description About Your Self</h6>
                            <p>
                              <%= user.description %>
                            </p>
                          </div>
                        </li>
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
              <div class="tab-pane" id="my-orders">
                <div class="timeline">
                  <div class="tab-content-heading">
                    <h4>My Order</h4>
                    <!-- <% if(user.currentOrder){ %> 
                      <a target="_blank" href="/getInvoice-<%=user.currentOrder.id%>"> Get Invoice </a>
                    <%} %> -->
                  </div>
                  <div class="my-orders">
                    <div class="row">
                      <div class="col-lg-12 col-md-12 col-12">
                        <div class="my-checkout">
                          <div class="table-responsive">
                            <table class="table table-bordered">
                              <thead>
                                <tr>
                                  <td class="td-heading">Meal</td>
                                  <td class="td-heading">Qty</td>
                                  <td class="td-heading">Price</td>
                                  <td class="td-heading">Status</td>
                                  <td class="td-heading">Invoice</td>
                                </tr>
                              </thead>
                              <tbody>
                              <% if(user.currentOrder){ %> 
                                <% user.currentOrder.products.forEach( everyProduct => { %> 
                                  <% var eachProduct = everyProduct.product %>
                                  <tr>
                                    <td>
                                      <div class="checkout-thumb-2">
                                        <a href="productDetail-<%=eachProduct.id%>">
                                          <img
                                            src="<%=eachProduct.images[0]%>"
                                            class="img-responsive"
                                            alt="thumb"
                                            title="thumb"
                                          />
                                        </a>
                                      </div>
                                      <div class="name-dt">
                                        <a href="productDetail-<%=eachProduct.id%>"
                                          ><h4> <%= eachProduct.title %> </h4></a
                                        >
                                        <a href="#"
                                              ><p> $ <%= user.currentOrder.totalCost %> </p></a
                                            >
                                      </div>
                                    </td>
                                    <td class="td-content"> <%= everyProduct.quantity %> </td>
                                    <td class="td-content"> <%= eachProduct.price %>  </td>
                                    <td class="td-content"> <%= user.currentOrder.status %>  </td>
                                    <td>
                                      <a target="_blank" href="/getInvoice-<%=user.currentOrder.id%>">
                                      <button class="invoice-btn btn-link">
                                        <i class="far fa-file-alt"></i>
                                      </button>
                                    </a>

                                    </td>
                                  </tr>
                                <% } ) %>
                              <%} %>
                              </tbody>
                            </table>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="tab-pane" id="order-history">
                <div class="timeline">
                  <div class="tab-content-heading">
                    <h4>Order History</h4>
                  </div>
                  <div class="my-orders">
                    <% var index = 0 %>
                    <% if(user.orders){ %> 
                      <% user.orders.forEach(eachOrder => { %>
                    <div class="row">
                      <div class="col-lg-12 col-md-12 col-12">
                        <div class="my-checkout">
                          <div class="table-responsive">

                            <h3 style="margin: 2% 0%;"> <%= eachOrder.timeOfOrder.toDateString() %> </h3>  
                            <table class="table table-bordered">
                              <thead>
                                <tr>
                                  <td class="td-heading">Meal</td>
                                  <td class="td-heading">Qty</td>
                                  <td class="td-heading">Price</td>
                                  <td class="td-heading">Status</td>
                                  <td class="td-heading">Invoice</td>
                               
                                </tr>
                              </thead>

                              <tbody>
                                    <% eachOrder.products.forEach( everyProduct => { %> 
                                      <% var eachProduct = everyProduct.product %>
                                      <tr>
                                        <td>
                                          <div class="checkout-thumb-2">
                                            <a href="productDetail-<%=eachProduct.id%>">
                                              <img
                                                src="<%=eachProduct.images[0]%>"
                                                class="img-responsive"
                                                alt="thumb"
                                                title="thumb"
                                              />
                                            </a>
                                          </div>
                                          <div class="name-dt">
                                            <a href="productDetail-<%=eachProduct.id%>"
                                              ><h4><%= eachProduct.title %> </h4></a
                                            >
                                            <a href="#"
                                              ><p> $ <%= eachOrder.totalCost %> </p></a
                                            >
                                          </div>
                                        </td>
                                        <td class="td-content"> <%= everyProduct.quantity %> </td>
                                        <td class="td-content"><%= eachProduct.price %> </td>
                                        <td class="td-content"><%= eachOrder.status %> </td>
                                        <td>
                                    <a target="_blank" href="/getInvoice-<%=eachOrder.id%>">
                                      <button class="invoice-btn btn-link">
                                        <i class="far fa-file-alt"></i>
                                      </button>
                                    </a>
                                        </td>
                                      </tr>
                                  <% } ) %>
                              </tbody>
                            </table>
                          </div>
                        </div>
                      </div>
                    </div>
                    <% index = index + 1 %>
                    <% } ) %>
                  <%} %>
                    
                  </div>
                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
    </section>

<%- include('./partials/footer') %>